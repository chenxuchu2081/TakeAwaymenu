<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#e5e5e5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c5c5c5">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="210dp"
            android:src="@drawable/foodbg"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cccccc"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#eeeeee"
            android:layout_marginTop="10dp">


            <ImageButton
                android:id="@+id/btmenu"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="37dp"
                android:background="@mipmap/menu"
                android:layout_marginTop="10dp"
                android:onClick="click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btmenu"
                android:layout_marginStart="75dp"
                android:text="menu"
                android:textColor="@android:color/black"
                android:textSize="18dp" />


            <ImageButton
                android:id="@+id/btcomment"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginEnd="37dp"
                android:background="@mipmap/comment"
                android:layout_marginTop="10dp"
                android:onClick="click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/btcomment"
                android:layout_marginEnd="50dp"
                android:text="Comments"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="#eeeeee">

            <ImageButton
                android:id="@+id/btgps"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginStart="37dp"
                android:background="@mipmap/gps"
                android:onClick="click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/btgps"
                android:layout_marginStart="80dp"
                android:text="GPS"
                android:textColor="@android:color/black"
                android:textSize="18dp" />


            <ImageButton
                android:id="@+id/btfavorite"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginEnd="36dp"
                android:background="@mipmap/about"
                android:layout_marginTop="10dp"
                android:onClick="click" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/btfavorite"
                android:layout_marginEnd="63dp"
                android:text="About us"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>